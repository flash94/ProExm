<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewItem">

    <!--ImageView: Add Item Image-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemImage"
        android:layout_centerHorizontal="true"
        android:layout_width="170dp"
        android:scaleType="centerCrop"
        app:riv_mutate_background="true"
        app:riv_corner_radius="20dip"
        app:riv_border_color="@color/colorGray1"
        android:src="@drawable/ic_add_image"
        android:padding="10dp"
        android:layout_height="170dp"
        android:layout_marginTop="15dp"/>

    <!--EditText: Input Item Name-->
    <EditText
        android:id="@+id/itemNameEt"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:inputType="text"
        android:hint="Item Name"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemImage"
        android:layout_marginTop="4dp"/>

    <!--EditText: Input Item MAnufacturer-->
    <EditText
        android:id="@+id/manufacturerEt"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:inputType="text"
        android:hint="Manufacturer Name"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemNameEt"
        android:layout_marginTop="10dp"/>

    <!--EditText: Input Item Price-->
    <EditText
        android:id="@+id/priceEt"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:inputType="number"
        android:hint="Price"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manufacturerEt"
        android:layout_marginTop="10dp"/>

    <!--EditText: Input Item Manufacturing Date-->
    <EditText
        android:id="@+id/mfDateEt"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Manufacture Date"
        android:focusable="false"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceEt"
        android:layout_marginTop="10dp"/>

    <!--EditText: Input Item Expiry Date-->
    <EditText
        android:id="@+id/expDateEt"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Expiry Date"
        android:focusable="false"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mfDateEt"
        android:layout_marginTop="10dp"/>

    <!--EditText: Input Item Description-->
    <EditText
        android:id="@+id/descEt"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:minHeight="90dp"
        android:gravity="start"
        android:inputType="text|textMultiLine"
        android:hint="Item Description"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expDateEt"
        android:layout_marginTop="10dp"/>

    <!--Add New Item -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_done_white"
        android:layout_margin="10dp"/>



</RelativeLayout>